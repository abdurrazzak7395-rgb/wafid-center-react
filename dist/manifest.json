{
  "manifest_version": 3,
  "name": "Wafid Center Helper",
  "version": "0.1.0",
  "description": "Web page â†” Extension AI bridge with React UI",
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": [
    "https://wafid.com/book-appointment/*"
   
  ],
  "content_scripts": [
    {
      "matches": [
        "https://wafid.com/book-appointment/*"
       
      ],
      "js": ["assets/content-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://wafid.com/book-appointment/*"
       
      ],
      "js": ["assets/content-main.js"],
      "css": ["assets/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "WCH" }
}
